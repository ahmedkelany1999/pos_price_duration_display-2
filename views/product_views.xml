<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_duration" model="ir.ui.view">
        <field name="name">product.template.form.inherit.duration</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='sales']//group[last()]" position="inside">
                <field name="service_duration"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_form_view_inherit_duration" model="ir.ui.view">
        <field name="name">product.product.form.inherit.duration</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[last()]" position="inside">
                <field name="service_duration"/>
            </xpath>
        </field>
    </record>

</odoo>